<!-- Criando as interfaces de JavaScript para desenvolver o CRUD -->
<script>

    new ImageFileReader('#modal-create [type=file]', '#modal-create img')
    new ImageFileReader('#modal-update [type=file]', '#modal-update img')

    // Selecionando o botão "novo", para criar um novo prato
    let formCreate = document.querySelector('#modal-create form');

    formCreate.save().then(json => {

      // Vamos o "reload" no caso de sucesso da promessa
      window.location.reload();

    }).catch( err => {

      console.log(err)

    })


    let formUpdate = document.querySelector('#modal-update form');

    // formUpdate.save().then(json => {

    // // Vamos o "reload" no caso de sucesso da promessa
    // window.location.reload();

    // }).catch(err => {

    // console.log(err);

    // });

    // Selecionar todos os todos de "update"
    // Temos também que converter no array, usando o nosso operador sprad
    [...document.querySelectorAll('.btn-update')].forEach(btnUpdate => {

        btnUpdate.addEventListener('click', e => {

          // Pegando a "tr" do botão, para pegar os dados dos campos
          let tr = e.path.find(el => {

            return (el.tagName.toUpperCase() === 'TR')

          })

          // Obs.: Lembrando que o dataset só armazena string
          let data = JSON.parse(tr.dataset.row)

          // Agora que temos o objeto podemos fazer o forIn

          for(let name in data){

            switch(name){

              case 'photo':
                formUpdate.querySelector("img").src = '/'+data[name]
                break;

              default:
                // Para cada um dos "names" que encontrarmos 
                let input = formUpdate.querySelector(`[name=${name}]`);
                if(input) input.value = data[name];

            }

          }

          // $('') => jQuery
          $('#modal-update').modal('show');
          // console.log(data)

        })

    })

</script>
